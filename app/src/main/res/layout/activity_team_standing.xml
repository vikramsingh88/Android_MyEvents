<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/score_board_background"
    tools:context="vikram.mindtree.com.myevents.TeamStanding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/team_listig"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color_score_board"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TableLayout
            android:id="@+id/score_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:divider="@drawable/keyboard_divider"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

        </TableLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
